<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_bg_title_result"
        android:gravity="center"
        android:text="Giải phương trình bậc nhất"
        android:textColor="@color/color_text"
        android:textSize="25dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập a:" />

        <EditText
            android:id="@+id/edtNhapA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:ems="10"
            android:hint="0"
            android:inputType="number|numberSigned"
            android:minHeight="48sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập b:" />

        <EditText
            android:id="@+id/edtNhapB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:ems="10"
            android:hint="0"
            android:inputType="number|numberSigned"
            android:minHeight="48sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnTiepTuc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="tiepTuc"
            android:text="Tiếp tục" />

        <Button
            android:id="@+id/btnGiaiPT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="giaiPhuongTrinh"
            android:text="Giải PT" />

        <Button
            android:id="@+id/btnThoat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="thoat"
            android:text="Thoát" />
    </LinearLayout>

    <TextView
        android:id="@+id/txvKetQua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_bg_title_result"
        android:gravity="center"
        android:textColor="@color/color_text"
        android:textSize="25dp" />
</LinearLayout>